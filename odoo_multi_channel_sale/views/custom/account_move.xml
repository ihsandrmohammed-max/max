<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_move_form_inherit" model="ir.ui.view">
        <field name="name">account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@id='other_tab']//field[@name='partner_bank_id']" position="after">
                <field name="salla_so_id"/>
            </xpath>
        </field>
        </record>

        <record id="view_move_tree_inherit_custom" model="ir.ui.view">
            <field name="name">account.move.tree.inherit.custom</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_out_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//list/header" position="inside">
                    <button name="action_update_payment_memo" string="Update Payment Memo" type="object" class="btn-primary"/>
                    <button name="action_fix_payments" string="Fix Payments" type="object" class="btn-primary"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
