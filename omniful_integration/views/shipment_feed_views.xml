<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Shipment Feed List View -->
    <record id="shipment_feed_view_list" model="ir.ui.view">
        <field name="name">shipment.feed.list</field>
        <field name="model">shipment.feed</field>
        <field name="arch" type="xml">
            <list string="Shipment Feeds">
                <field name="received_at"/>
                <field name="event_name"/>
                <field name="channel_id"/>
                <field name="shipment_id"/>
                <field name="tracking_number"/>
                <field name="carrier"/>
                <field name="shipment_status"/>
<!--                <field name="origin_address"/>-->
<!--                <field name="destination_address"/>-->
<!--                <field name="estimated_delivery_date"/>-->
                <field name="state" decoration-success="state == 'processed'" decoration-warning="state == 'pending'" decoration-danger="state == 'error'"/>
            </list>
        </field>
    </record>

    <!-- Shipment Feed Form View -->
    <record id="shipment_feed_view_form" model="ir.ui.view">
        <field name="name">shipment.feed.form</field>
        <field name="model">shipment.feed</field>
        <field name="arch" type="xml">
            <form string="Shipment Feed">
                <header>
                    <button name="action_reprocess" type="object" string="Reprocess" class="btn-primary" invisible="state != 'error'"/>
                    <field name="state" widget="statusbar" statusbar_visible="pending,processed,error"/>
                </header>
                <sheet>
                    <group>
                        <group string="Webhook Information">
                            <field name="event_name"/>
                            <field name="received_at"/>
                            <field name="channel_id"/>
                        </group>
                        <group string="Shipment Information">
                            <field name="shipment_id"/>
                            <field name="tracking_number"/>
                            <field name="carrier"/>
                            <field name="shipment_status"/>
<!--                            <field name="shipment_date"/>-->
<!--                            <field name="estimated_delivery_date"/>-->
<!--                            <field name="actual_delivery_date"/>-->
                        </group>
                    </group>
                    <group>
                        <group string="Origin Information">
<!--                            <field name="origin_address"/>-->
<!--                            <field name="origin_contact"/>-->
                        </group>
                        <group string="Destination Information">
<!--                            <field name="destination_address"/>-->
<!--                            <field name="destination_contact"/>-->
                        </group>
                    </group>
                    <group>
                        <group string="Package Information">
                            <field name="weight"/>
                            <field name="dimensions"/>
<!--                            <field name="package_count"/>-->
                        </group>
                        <group string="Processing Information">
                            <field name="error_message" invisible="state != 'error'"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Raw Data">
                            <field name="raw_data" widget="ace" options="{'mode': 'json'}"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Shipment Feed Search View -->
    <record id="shipment_feed_view_search" model="ir.ui.view">
        <field name="name">shipment.feed.search</field>
        <field name="model">shipment.feed</field>
        <field name="arch" type="xml">
            <search string="Shipment Feeds">
                <field name="tracking_number"/>
                <field name="carrier"/>
                <field name="shipment_status"/>
                <field name="event_name"/>
                <field name="channel_id"/>
                <filter string="Pending" name="pending" domain="[('state', '=', 'pending')]"/>
                <filter string="Processed" name="processed" domain="[('state', '=', 'processed')]"/>
                <filter string="Error" name="error" domain="[('state', '=', 'error')]"/>
                <separator/>
                <filter string="Today" name="today" domain="[('received_at', '>=', datetime.datetime.combine(context_today(), datetime.time(0,0,0)))]"/>
                <filter string="This Week" name="this_week" domain="[('received_at', '>=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Event Name" name="group_event_name" context="{'group_by': 'event_name'}"/>
                    <filter string="Channel" name="group_channel" context="{'group_by': 'channel_id'}"/>
                    <filter string="Carrier" name="group_carrier" context="{'group_by': 'carrier'}"/>
                    <filter string="Status" name="group_status" context="{'group_by': 'shipment_status'}"/>
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'received_at:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Shipment Feed Action -->
    <record id="shipment_feed_action" model="ir.actions.act_window">
        <field name="name">Shipment Feeds</field>
        <field name="res_model">shipment.feed</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="shipment_feed_view_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No shipment feeds found!
            </p>
            <p>
                Shipment feeds will appear here when webhooks are received from Omniful.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
</odoo>