<?xml version="1.0" encoding="utf-8"?>

<odoo>
	<data>
		<record id="form_wizard_message" model="ir.ui.view">
			<field name="name">Message wizard</field>
			<field name="model">wk.wizard.message</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Message">
					<sheet>
						<field name="text" nolabel="1" readonly="1" widget="html"/>
						<newline/>
						<separator/>
					</sheet>
					<footer>
						<button special="cancel" class="btn-danger" string="Close" />
					</footer>
				</form>
			</field>
		</record>
	</data>
</odoo>
