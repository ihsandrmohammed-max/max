<odoo>
    <record id="view_partner_form_inherit_omniful" model="ir.ui.view">
        <field name="name">res.partner.form.omniful</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <!-- Insert buttons just before the notebook -->
            <div name="button_box" position="inside">
                    <button name="action_send_to_omniful"
                            type="object"
                            class="oe_stat_button btn-primary"
                            icon="fa-cloud-upload"
                            string="Send to Omniful"/>
                    <button name="action_check_in_omniful"
                            type="object"
                            class="oe_stat_button btn-secondary"
                            icon="fa-search"
                            string="Check in Omniful"/>
                    <button name="action_update_omniful"
                            type="object"
                            class="oe_stat_button btn-secondary"
                            icon="fa-refresh"
                            string="Update in Omniful"/>
                </div>

            <!-- Add new page in notebook -->
            <xpath expr="//notebook" position="inside">
                <page string="Omniful Info">
                    <group>
                        <group>
                            <field name="omniful_customer_id" readonly="1"/>
                            <field name="omniful_status" readonly="1"/>
                            <field name="omniful_email" readonly="1"/>
                            <field name="omniful_mobile" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="omniful_response_json" nolabel="1" readonly="1" widget="text"
                               placeholder="Raw response from Omniful will appear here"
                               style="font-family: monospace; white-space: pre;"/>
                    </group>
                </page>
            </xpath>

        </field>
    </record>
</odoo>
