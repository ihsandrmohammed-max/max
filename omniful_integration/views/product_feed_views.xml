<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Product Feed List View -->
    <record id="product_omniful_feed_view_list" model="ir.ui.view">
        <field name="name">product_omniful.feed.list</field>
        <field name="model">product_omniful.feed</field>
        <field name="arch" type="xml">
            <list string="Product Feeds">
                <field name="received_at"/>
                <field name="event_name"/>
                <field name="channel_id"/>
                <field name="product_id"/>
                <field name="sku_code"/>
                <field name="product_name"/>
                <field name="brand"/>
                <field name="category"/>
                <field name="price"/>
                <field name="state" decoration-success="state == 'processed'" decoration-warning="state == 'received'" decoration-danger="state == 'error'"/>
            </list>
        </field>
    </record>

    <!-- Product Feed Form View -->
    <record id="product_omniful_feed_view_form" model="ir.ui.view">
        <field name="name">product_omniful.feed.form</field>
        <field name="model">product_omniful.feed</field>
        <field name="arch" type="xml">
            <form string="Product Feed">
                <header>
                    <button name="action_reprocess" type="object" string="Reprocess" class="btn-primary" invisible="state != 'error'"/>
                    <field name="state" widget="statusbar" statusbar_visible="received,processed,error"/>
                </header>
                <sheet>
                    <group>
                        <group string="Webhook Information">
                            <field name="event_name"/>
                            <field name="received_at"/>
                            <field name="channel_id"/>
                        </group>
                        <group string="Product Information">
                            <field name="product_id"/>
                            <field name="sku_code"/>
                            <field name="product_name"/>
                            <field name="brand"/>
                            <field name="category"/>
                        </group>
                    </group>
                    <group>
                        <group string="Pricing Information">
                            <field name="price"/>
                            <field name="cost"/>
                        </group>
                        <group string="Physical Information">
                            <field name="weight"/>
                            <field name="dimensions"/>
                            <field name="status"/>
                        </group>
                    </group>
                    <group>
                        <group string="Processing Information">
                            <field name="error_message" invisible="state != 'error'"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" widget="html"/>
                        </page>
                        <page string="Raw Data">
                            <field name="raw_data" widget="ace" options="{'mode': 'json'}"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Product Feed Search View -->
    <record id="product_omniful_feed_view_search" model="ir.ui.view">
        <field name="name">product_omniful.feed.search</field>
        <field name="model">product_omniful.feed</field>
        <field name="arch" type="xml">
            <search string="Product Feeds">
                <field name="sku_code"/>
                <field name="product_name"/>
                <field name="brand"/>
                <field name="category"/>
                <field name="event_name"/>
                <field name="channel_id"/>
                <filter string="Received" name="received" domain="[('state', '=', 'received')]"/>
                <filter string="Processed" name="processed" domain="[('state', '=', 'processed')]"/>
                <filter string="Error" name="error" domain="[('state', '=', 'error')]"/>
                <separator/>
                <filter string="Today" name="today" domain="[('received_at', '>=', datetime.datetime.combine(context_today(), datetime.time(0,0,0)))]"/>
                <filter string="This Week" name="this_week" domain="[('received_at', '>=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Event Name" name="group_event_name" context="{'group_by': 'event_name'}"/>
                    <filter string="Channel" name="group_channel" context="{'group_by': 'channel_id'}"/>
                    <filter string="Brand" name="group_brand" context="{'group_by': 'brand'}"/>
                    <filter string="Category" name="group_category" context="{'group_by': 'category'}"/>
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'received_at:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Product Feed Action -->
    <record id="product_omniful_feed_action" model="ir.actions.act_window">
        <field name="name">Product Feeds</field>
        <field name="res_model">product_omniful.feed</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="product_omniful_feed_view_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No product feeds found!
            </p>
            <p>
                Product feeds will appear here when webhooks are received from Omniful.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
</odoo>