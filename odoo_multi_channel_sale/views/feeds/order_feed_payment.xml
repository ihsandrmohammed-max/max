<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <!-- Inherit order feed form view to add payment button -->
        <record id="order_feed_view_form_payment" model="ir.ui.view">
            <field name="name">order.feed.form.payment</field>
            <field name="model">order.feed</field>
            <field name="inherit_id" ref="odoo_multi_channel_sale.order_feed_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button
                        name="process_payment_without_invoice"
                        type="object"
                        string="Process Payment (No Invoice)"
                        class="oe_highlight"
                        invisible="state != 'done'"
                    />
                </xpath>
            </field>
        </record>
    </data>
</odoo>

