<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="inherit_account_payment_view" model="ir.ui.view">
            <field name="name">inherit.account.payment.view</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date']" position="after">
                    <field name="paid_amount"/>

                </xpath>
            </field>
        </record>
        <record id="add_field_include_fees_to_product_product" model="ir.ui.view">
            <field name="name">add.field.include.fees.to.product.product</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <field name="categ_id" position="after">
                    <field name="include_fees" string="Include Fees"/>
                </field>
            </field>
        </record>


        <record id="view_account_journall_form_inherit" model="ir.ui.view">
            <field name="name">view.account.journal.form.inherit</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[1]/group/group[2]" position="after">
                    <!-- Add your fields or attributes here -->
                    <group name="bank_fees" string="Bank Fees">
                        <field name="is_fee"/>
                        <field name="fee_account_id"
                               invisible="is_fee == False"
                               required="is_fee == True"
                        />
                        <field name="percentage"
                               invisible="is_fee == False"
                               required="is_fee == True"
                        />
                        <field name="extra_fees"
                               invisible="is_fee == False"

                        />
                        <field name="tax_fees"
                               invisible="is_fee == False"

                        />
                    </group>
                </xpath>
            </field>
        </record>

