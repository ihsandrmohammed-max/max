<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_temp_inventory_tree" model="ir.ui.view">
        <field name="name">temp.inventory.list</field>
        <field name="model">temp.inventory</field>
        <field name="arch" type="xml">
            <list string="Temporary Inventory">
                <field name="name"/>
                <field name="end_url"/>
                <field name="create_date"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_temp_inventory_form" model="ir.ui.view">
        <field name="name">temp.inventory.form</field>
        <field name="model">temp.inventory</field>
        <field name="arch" type="xml">
            <form string="Temporary Inventory">
                <header>
                    <button name="action_fetch_api_data" 
                            string="Fetch API Data" 
                            type="object" 
                            class="btn-primary"
                            icon="fa-download"
                            help="Fetch data from API and populate content field"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="end_url"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group string="Content">
                        <field name="content" nolabel="1" widget="ace" options="{'mode': 'json'}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_temp_inventory_search" model="ir.ui.view">
        <field name="name">temp.inventory.search</field>
        <field name="model">temp.inventory</field>
        <field name="arch" type="xml">
            <search string="Search Temporary Inventory">
                <field name="name"/>
                <field name="end_url"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Name" name="group_name" domain="[]" context="{'group_by': 'name'}"/>
                    <filter string="Creation Date" name="group_create_date" domain="[]" context="{'group_by': 'create_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_temp_inventory" model="ir.actions.act_window">
        <field name="name">Temporary Inventory</field>
        <field name="res_model">temp.inventory</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_temp_inventory_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new temporary inventory record
            </p>
            <p>
                Manage temporary inventory data for Omniful integration.
            </p>
        </field>
    </record>


</odoo>